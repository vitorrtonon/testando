<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="topcom.presense.server.pojo">

    <class name="Person" table="Person">

		<id name="id" column="person_id" type="long" />

		<property name="name" column="name" type="string" />

		<set name="events" inverse="true"  table="PersonEvent" lazy="false">
			<key column="person_id" not-null="true" />
			<many-to-many column="event_id" class="Event" />
		</set>

		<bag name="beacons" inverse="true" table="Beacon" lazy="false">
			<key column="person" not-null="true" />
			<one-to-many class="Beacon" />
		</bag>

		<bag name="attendances" inverse="true" table="Attendance" lazy="false">
			<key column="attendances_person" not-null="true"/>
			<one-to-many class="Attendance" />
		</bag>
    </class>

</hibernate-mapping>
